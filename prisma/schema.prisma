generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/Qbase"
}

model User {
  id          Int      @id @default(autoincrement())
  username    String
  surname     String
  phonenumber String   @unique
  password    String
  cardlist    Card[]
  partylist    Party[]
  createdAt   DateTime @default(now())
}

model Card {
  id        Int      @id @default(autoincrement())
  number    String
  date      String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Party {
  id         Int      @id @default(autoincrement())
  userId     Int
  name       String
  type       String
  address    String
  cardNumber String
  startTime  String
  endTime    String
  status     Boolean
  user       User     @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
}



