generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@127.0.0.1:8889/Qbase"
}

  model User {
    id          Int      @id @default(autoincrement())
    username    String
    surname     String
    sex         Int      @default(0)
    phonenumber String   @unique
    password    String
    cardlist    Card[]
    partylist   Party[]
    createdAt   DateTime @default(now())
  }

  model Card {
    id        Int      @id @default(autoincrement())
    userId    Int
    number    String
    date      String
    user      User     @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
  }

  model Party {
    id         Int      @id @default(autoincrement())
    userId     Int
    userName   String   
    name       String
    type       String
    address    String
    cardNumber String
    startTime  String
    endTime    String
    status     Boolean
    user       User     @relation(fields: [userId], references: [id])
    createdAt  DateTime @default(now())
  }



